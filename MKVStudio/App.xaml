<Application x:Class="MKVStudio.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MKVStudio.ViewModels"
             xmlns:v="clr-namespace:MKVStudio.Views.Controls">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/Styles/Common.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type vm:FilesViewModel}">
                <v:FilesView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:QueueViewModel}">
                <v:QueueView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:VideoFileViewModel}">
                <v:VideoFileView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:FileOverviewViewModel}">
                <v:FileOverviewView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:TracksViewModel}">
                <v:TracksView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:VideoTrackViewModel}">
                <v:VideoTrackView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:AudioTrackViewModel}">
                <v:AudioTrackView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SubtitleTrackViewModel}">
                <v:SubtitleTrackView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:AttachmentTrackViewModel}">
                <v:AttachmentTrackView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ConvertViewModel}">
                <v:ConvertView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
