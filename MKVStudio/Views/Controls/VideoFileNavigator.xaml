<UserControl x:Class="MKVStudio.Views.Controls.VideoFileNavigator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MKVStudio.Views.Controls"
             xmlns:nav="clr-namespace:MKVStudio.State.VideoFileNavigator"
             xmlns:files="clr-namespace:MKVStudio.ViewModels.Files"
             d:DataContext="{d:DesignInstance Type=files:VideoFileViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <RadioButton Content="General" Margin="5" Command="{Binding UpdateCurrentVideoFileViewModelCommand}" CommandParameter="{x:Static nav:VideoFileViewModelType.General}"/>
            <RadioButton Content="Media info" Margin="5" Command="{Binding UpdateCurrentVideoFileViewModelCommand}" CommandParameter="{x:Static nav:VideoFileViewModelType.MediaInfo}"/>
            <RadioButton Content="Convert" Margin="5" Command="{Binding UpdateCurrentVideoFileViewModelCommand}" CommandParameter="{x:Static nav:VideoFileViewModelType.Convert}"/>
        </StackPanel>
    </Grid>
</UserControl>
