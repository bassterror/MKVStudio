<UserControl x:Class="MKVStudio.Views.Controls.VideoFileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MKVStudio.Views.Controls"
             xmlns:files="clr-namespace:MKVStudio.ViewModels.Files"
             d:DataContext="{d:DesignInstance Type=files:VideoFileViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <local:VideoFileNavigator Grid.Row="0" DataContext="{Binding Navigator}"/>
            <ContentControl Grid.Row="1" Content="{Binding Navigator.CurrentVideoFileViewModel}"/>
        </Grid>
    </Grid>
</UserControl>
