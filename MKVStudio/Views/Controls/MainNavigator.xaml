<UserControl x:Class="MKVStudio.Views.Controls.MainNavigator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MKVStudio.Views.Controls"
             xmlns:nav="clr-namespace:MKVStudio.State.MainNavigator"
             xmlns:main="clr-namespace:MKVStudio.ViewModels.Main"
             d:DataContext="{d:DesignInstance Type=main:MainWindowViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Grid.Column="0">
            <RadioButton Content="Files" Margin="5" Command="{Binding UpdateCurrentMainViewModelCommand}" CommandParameter="{x:Static nav:MainViewModelType.Files}"/>
            <RadioButton Content="Queue" Margin="5" Command="{Binding UpdateCurrentMainViewModelCommand}" CommandParameter="{x:Static nav:MainViewModelType.Queue}"/>
        </StackPanel>
    </Grid>
</UserControl>
